# SkillHub Frontend Environment Configuration
# Copy this file to .env in the frontend directory

# ===== API CONFIGURATION =====
# Backend API URL
REACT_APP_API_URL=http://localhost:5000/api

# Environment mode
REACT_APP_NODE_ENV=development

# ===== FIREBASE CONFIGURATION =====
# Firebase authentication configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id

# ===== GOOGLE SERVICES =====
# Google OAuth2 Client ID (for Google Sign-In)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ===== ANALYTICS =====
# Google Analytics tracking ID (optional)
REACT_APP_GA_TRACKING_ID=your_google_analytics_id

# ===== FEATURE FLAGS =====
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false

# ===== API ENDPOINTS =====
# External API endpoints (if different from main API)
REACT_APP_AUTH_API_URL=http://localhost:5000/api/auth
REACT_APP_UPLOAD_API_URL=http://localhost:5000/api/upload

# ===== DEVELOPMENT ONLY =====
# Enable detailed logging in development
REACT_APP_DEBUG_MODE=false

# Mock data for testing
REACT_APP_USE_MOCK_DATA=false 